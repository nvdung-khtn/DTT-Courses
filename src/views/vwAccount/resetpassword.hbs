<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.14.0/css/all.css" integrity="sha384-HzLeBuhoNPvSl5KYnjx0BT+WB0QEEqLprO+NBkkk5gbc67FTaL7XIGa2w1L0Xbgc" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/account/resetpassword.css">
    <title>Đặt lại mật khẩu</title>
</head>

<body>
    <div class="container">
            <div class="cont-right shadow-sm">
                <div class="text-center">
                    <i class="fas fa-lock"></i>
                </div>
                <h2 class="title">Đặt lại mật khẩu</h2>
                <p class="decript">Mật khẩu của bạn sẽ được thay đổi tại đây</p>
                <form action="/account/resetpassword" id="frmresetpassword" method="POST">
                    <div class="val-group">
                        <input type="password" id="password" name="password" placeholder="Nhập mật khẩu mới..." />
                        <span class="val-message"></span>
                    </div>
                    <div class="val-group">
                        <input type="password" id="repeatpassword" name="repeatpassword" placeholder="Nhập lại mật khẩu.." />   
                        <span class="val-message"></span>
                    </div>
                    <hr>                   
                    <div class="text-center">                    
                        <button class="btn-login" type="submit">Xác nhận</button> 
                    </div>
                </form>
            </div>
    </div>
</body>
<script src="/javascript/validator.js"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        Validator({
            form: "#frmresetpassword",
            formGroupSelector: ".val-group",
            errorSelector: ".val-message",
            rules: [
                Validator.minLength("#password", 6, "Mật khẩu phải dài hơn 6 kí tự"),
                Validator.isRequired("#repeatpassword", "Mật khẩu không trùng khớp"),
                Validator.isConfirmed(
                    "#repeatpassword",
                    function () {
                        return document.querySelector("#frmresetpassword #password").value;
                    },
                    "Mật khẩu không trùng khớp"
                ),
            ]
        });
    });
</script>

</html>