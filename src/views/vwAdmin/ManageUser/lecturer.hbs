{{#section 'css'}}
<link rel="stylesheet" href="/css/admin/qlsp.css">
{{/section}}

{{#section 'js'}}
<script src="/javascript/validator.js"></script>	
<script>
		$('.sidebar-nav-item .dashboard').removeClass('active');
		$('.sidebar-nav-item .lecturer-management').addClass('active');

		    document.addEventListener("DOMContentLoaded", function () {
            Validator({
                form: "#edit-lecturer",
                formGroupSelector: ".form-group",
                errorSelector: ".form-message",
                rules: [
					Validator.isRequired("#username", "Username invalid"),
                    Validator.isRequired("#name", "Lecturer name invalid"),
					Validator.isRequired("#password", "Password invalid"),
                    Validator.isEmail("#email", "Email invalid"),
                    Validator.isRequired("#sdt", "Phone number invalid"),
                    Validator.isRequired("#address", "Address invalid"),
					Validator.isRequired("#carrer", "Career invalid"),
					Validator.isRequired("#exp", "Experient invalid"),
                    Validator.isConfirmed(
                        function () {
                            return document.querySelector("#edit-lecturer").value;
                        },
                    ),
                ],
                onSubmit: function (data) {
                    // Call API
                    console.log(data);
                },
            });
        });
</script>
{{/section}}

<div class="wrapper">
		<div class="row">
			<div class="col-100 col-m-12 col-sm-12">
				<div class="card">
					<div class="card-header">
						<h3>
							Quản lý Giảng viên
						</h3>
	
					</div>
					<div class="card-content">
						<table>
							<thead>
								<tr>
									<th>ID</th>
									<th>Họ tên</th>
									<th>Email</th>
									<th>Số điện thoại</th>
									<th>Trạng thái</th>
									<th>Quản lý</th>
								</tr>
							</thead>
							<tbody>
								{{#each users}}
								<tr>
									<td>{{_id}}</td>
									<td>{{name}}</td>
									<td>{{email}}</td>
									<td>{{phone}}</td>
									<td>{{stringStatus}}</td>
									<td>
										<a href="/admin/lecturer/edit/{{_id}}" class="edit"><i class="material-icons" title="Edit">&#xE254;</i></a>
										<a href="" class="delete"><i class="material-icons" title="Delete">&#xE872;</i></a>
									</td>
								</tr>
								{{/each}}
								
							</tbody>
						</table>
					</div>
				</div>
			</div>
			
		</div>







