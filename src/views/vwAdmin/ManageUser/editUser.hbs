{{#section 'css'}}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
<link rel="stylesheet" href="/css/admin/manage.css">
{{/section}}

{{#section 'js'}}
<script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
<script>
    $('.sidebar-nav-item .dashboard').removeClass('active');
    flatpickr('#createAt, #dob', {dateFormat: 'd-m-Y'});
</script>
{{/section}}

<div class="wrapper">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3>Thông Tin Học Viên</h3>					
                </div>
                <div class="card-content">
                    <form id="editProduct">
                        <div class="modal-body">

                            <div class="form-group">
                                <label for="ID">ID</label>
                                <input type="text" class="form-control" id="ID" name="ID" value="{{this.student._id}}" disabled>
                                <span class="form-message"></span><span class="message-clone">0</span>
                            </div>

                            <div class="form-group">
                                <label for="name">Họ tên</label>
                                <input type="text" class="form-control" id="name" name="name" value="{{this.student.name}}">
                                <span class="form-message"></span><span class="message-clone">0</span>
                            </div>

                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email" value="{{this.student.email}}">
                                <span class="form-message"></span><span class="message-clone">0</span>
                            </div>

                            <div class="form-group">
                                <label for="password">Password</label>
                                <input type="text" class="form-control" id="password" name="password" value="********">
                                <span class="form-message"></span><span class="message-clone">0</span>
                            </div>

                            <div class="form-group">
                                <label for="dob">Ngày sinh</label>
                                <input type="text" class="form-control" id="dob" name="dob" value="{{this.student.dob}}" >
                                <span class="form-message"></span><span class="message-clone">0</span>
                            </div>
                           
                            <div class="form-group">
                                <label for="sdt">Số điện thoại</label>
                                <input type="text" class="form-control" id="sdt" name="sdt" value="{{this.student.phone}}">
                                <span class="form-message"></span><span class="message-clone">0</span>
                            </div>

                            <div class="form-group">
                                <label for="address">Địa chỉ</label>
                                <textarea class="form-control" id="address" name="address" >{{this.student.address}}</textarea>
                                <span class="form-message"></span><span class="message-clone">0</span>
                            </div>	

                            <div class="form-group">
                                <label for="createAt">Ngày đăng ký</label>
                                <input type="text" class="form-control" id="createAt" name="createAt" value="{{this.student.createdAt}}" >
                                <span class="form-message"></span><span class="message-clone">0</span>
                            </div>

                            <div class="form-group">
                                <label for="join">Số khóa học đã đăng ký</label>
                                <input type="text" class="form-control" id="join" name="join" value="{{this.student.totalCourse}}" disabled>
                                <span class="form-message"></span><span class="message-clone">0</span>
                            </div>


                            <div class="form-group">
                                <label for="status">Trạng thái</label>
                                <input type="text" class="form-control" id="status" name="status" value="{{this.student.status}}">
                                <span class="form-message"></span><span class="message-clone">0</span>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <a href="/admin/student"><input type="button" class="btn back" value="Quay lại"></a>
                            <input type="submit" class="btn update" value="Cập nhật">
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>