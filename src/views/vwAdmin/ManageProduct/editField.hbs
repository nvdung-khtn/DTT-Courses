{{#section 'css'}}
<link rel="stylesheet" href="/css/admin/manage.css">
{{/section}}

{{#section 'js'}}
<script src="/javascript/validator.js"></script>
<script>
    $('.sidebar-nav-item .dashboard').removeClass('active');
    $('.sidebar-nav-item .categories-management').addClass('active');
</script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
            Validator({
                form: "#edit-field",
                formGroupSelector: ".form-group",
                errorSelector: ".form-message",
                rules: [
                    Validator.isRequired("#name", "Tên lĩnh vực còn trống"),
                    ]
            });
        });
</script>
{{/section}}

<div class="wrapper">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3>Thông Tin Lĩnh Vực</h3>					
                </div>
                <div class="card-content">
                    <form id="edit-field" method="POST">
                        <div class="modal-body">

                            <div class="form-group">
                                <label for="id">ID</label>
                                <input type="text" class="form-control unable" id="id" name="id" value="{{this.field._id}}" readonly="true">
                                <span class="form-message"></span><span class="message-clone">0</span>
                            </div>

                            <div class="form-group">
                                <label for="name">Tên lĩnh vực</label>
                                <input type="text" class="form-control" id="name" name="name" value="{{this.field.name}}">
                                <span class="form-message"></span><span class="message-clone">0</span>
                            </div>

                            <div class="form-group">
                                <label for="catId">Tên danh mục</label>
                                <select class="form-control" name="catId" id="catId">
                                    <option value="{{this.field.catId}}">{{this.field.catName}}</option>
                                    {{#each category}}
                                    <option value="{{_id}}">{{name}}</option>
                                    {{/each}}
                                </select>
                                <span class="form-message"></span><span class="message-clone">0</span>
                            </div>

                            <div class="form-group">
                                <label for="totalCourse">Số lượng khóa học</label>
                                <input type="text" class="form-control unable" disabled id="totalCourse" name="totalCourse" value="{{this.field.totalCourse}}">
                                <span class="form-message"></span><span class="message-clone">0</span>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <a href="/admin/field?page={{page}}"><input type="button" class="btn back" value="Quay lại"></a>
                            <input type="submit" class="btn update" value="Cập nhật">
                        </div>
                    </form>
            </div>
        </div>
    </div>
</div>