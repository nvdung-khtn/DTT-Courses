		    document.addEventListener("DOMContentLoaded", function () {
            Validator({
                form: "#edit-product",
                formGroupSelector: ".form-group",
                errorSelector: ".form-message",
                rules: [
                    Validator.isRequired("#name", "Product name invalid"),
					Validator.isRequired("#category", "Category name invalid"),
					Validator.isRequired("#price", "Price invalid"),
					Validator.isRequired("#quantity", "Quantity invalid"),
					Validator.isRequired("#lecturer", "Lecturer invalid"),
                    Validator.isConfirmed(
                        function () {
                            return document.querySelector("#edit-product").value;
                        },
                    ),
                ],
                onSubmit: function (data) {
                    // Call API
                    console.log(data);
                },
            });
        });

</script>







