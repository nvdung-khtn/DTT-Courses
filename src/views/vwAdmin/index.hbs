<div class="wrapper">
		<div class="row">
			<div class="khoi">
				<div class="counter bg-primary">
					<p>
						<i class="fas fa-user-graduate"></i>
					</p>
					<h3> {{students.length}}</h3>
					<p>Tổng học viên</p>
				</div>
			</div>
			<div class="khoi">
				<div class="counter bg-warning">
					<p>
						<i class="fas fa-user-tie"></i>
					</p>
					<h3>{{lecturers.length}}</h3>
					<p>Tổng giảng viên</p>
				</div>
			</div>
			<div class="khoi">
				<div class="counter bg-success">
					<p>
						<i class="fas fa-tasks"></i>
					</p>
					<h3>{{category.length}}</h3>
					<p>Tổng danh mục</p>
				</div>
			</div>
			<div class="khoi">
				<div class="counter bg-success">
					<p>
						<i class="fas fa-tasks"></i>
					</p>
					<h3>{{fields.length}}</h3>
					<p>Tổng lĩnh vực</p>
				</div>
			</div>
			<div class="khoi">
				<div class="counter bg-danger">
					<p>
						<i class="fas fa-book-open"></i>
					</p>
					<h3>{{courses.length}}</h3>
					<p>Tổng khóa học</p>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="col-12">
				<div class="card">
					<div class="card-header">
						<h3>
							Quản lý khóa học nổi bật
						</h3>
						<div class="btn-reset">								
							<a href="/admin/resetIndex" class="reset"><i class="material-icons" title="Reset">wifi_protected_setup</i></a>
						</div>
					</div>
					<div class="card-content">
						<table>
							<thead>
								<tr>
									<th>#</th>
									<th>Tên khóa học</th>
									<th>Lĩnh vực</th>
									<th>Lượt xem</th>
									<th>Đánh giá</th>
									<th>Số sao</th>
									<th>Trạng thái</th>
									<th>Điểm nổi bật</th>
								</tr>
							</thead>
							<tbody>
								{{#each courses}}
								<tr>
									<td class="counterCell"></td>
									<td class="custom-display">{{name}}</td>
									<td>{{fieldName}}</td>
									<td>{{view}}</td>
									<td>{{totalRating}}</td>
									<td>{{eveRating}}</td>
									<td>{{stringStatus}}</td>
									<td>{{nIndex}}</td>
								</tr>
								{{/each}}
							</tbody>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>