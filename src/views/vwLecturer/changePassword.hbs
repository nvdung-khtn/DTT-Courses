


{{#section 'css'}}
<link rel="stylesheet" href="/css/account/userlogin.css">
<link rel="stylesheet" href="/css/lecturer/changePassword.css">
{{/section}}
{{#section 'js'}}
<script src="/javascript/validator.js"></script>

{{!-- Validate form --}}
<script>
    Validator({
        form: '#frmMain1',
        formGroupSelector: '.form-group',
        errorSelector: '.form-message',
        rules: [
            Validator.isRequired("#name", "Vui lòng nhập tên khóa học."),
            Validator.isRequired("#initialPrice", "Vui lòng nhập học phí."),
            Validator.isRequired("#tinyDes", "Vui lòng nhập mô tả ngắn học về khóa học"),
            Validator.isRequired("#fullDes", "Vui lòng nhập chi tiết nội dung của khóa học."),
            Validator.isRequired("#avatar", "Vui lòng chọn ảnh đại diện cho khóa học."),
            Validator.isRequired("#introVideo", "Vui lòng chọn video giới thiệu khóa học."),
            Validator.isRequired("#quantity", "Vui lòng nhập số lượng bài giảng."),
            Validator.ischecked("#fieldId",
                function () {
                    return document.querySelector("#frmMain #fieldId").value;
                },
                "Vui lòng chọn lĩnh vực của khóa học.")
        ]
    })
</script>
{{/section}}


<div class="content">
    <div class="page-title">
        <h1>Đổi mật khẩu</h1>
    </div><!-- /.page-title -->
    <div class="container">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="cont-changepassword">
                    <form method="POST">
                        <div class="form-group">
                            <label for="oldPass">Mật khẩu cũ</label>
                            <input type="password" id="oldPass" name="oldpassword" class="inp-change-password form-control">
                        </div>
                        <div class="form-group">
                            <label for="oldPass">Mật khẩu mới</label>
                            <input type="password" id="oldPass" name="newpassword" class="inp-change-password form-control">

                            <small id="emailHelp" class="form-text text-muted">Lưu ý: Mật khẩu phải dài hơn 6 kí tự</small>
                        </div>
                        <div class="form-group">
                            <label for="oldPass">Xác nhận mật khẩu</label>
                            <input type="password" id="oldPass" name="confirmpassword" class="inp-change-password form-control">

                            <small id="emailHelp" class="form-text text-muted">Xác nhận lại mật khẩu mới</small>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary button-change-password">Đổi mât khẩu</button>
                        </div>
                        
                    </form>
                </div>
            </div>
            <div class="col-3">

            </div>
        </div>
    </div>
    
    
</div>



</div><!-- /.content -->

<script>
    $(document).ready(function () {
        
        $('.menu-advanced .edit-info').removeClass('active');
        $('.menu-advanced .change-password').addClass('active');
        $('.menu-advanced .course-management').removeClass('active');
    });
</script>